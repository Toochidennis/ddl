<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.StudentProfile">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"/>
    </androidx.cardview.widget.CardView>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    android:background="@drawable/bg_drawable"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/circle_initials"
                        android:padding="10dp"
                        android:gravity="center">

                    <TextView
                        android:id="@+id/initials_student"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/la_to"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/studentName_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dike kingsley"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/roboto"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="30dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:layout_marginTop="-30dp"
                android:layout_marginBottom="10dp"
                app:contentPadding="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <RelativeLayout
                        android:id="@+id/call_student_profile"
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        >

                    <ImageButton
                        android:id="@+id/call_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:tint="@color/blue"
                        android:clickable="false"
                        android:layout_centerHorizontal="true"
                        android:background="@android:color/white"
                        android:src="@drawable/ic_call" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Call"
                            android:layout_marginTop="5dp"
                            android:textSize="12sp"
                            android:fontFamily="@font/arimo"
                            android:layout_centerHorizontal="true"
                            android:clickable="false"
                            android:textColor="@color/blue"
                            android:layout_below="@id/call_icon"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/sms_student_profile"
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        >

                    <ImageButton
                        android:id="@+id/sms_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@android:color/white"
                        android:tint="@color/blue"
                        android:clickable="false"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_sms" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sms"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:textSize="12sp"
                            android:fontFamily="@font/arimo"
                            android:clickable="false"
                            android:textColor="@color/blue"
                            android:layout_below="@id/sms_icon"/>
                    </RelativeLayout>



                    <RelativeLayout
                        android:id="@+id/email_student_profile"
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        >
                    <ImageButton
                        android:id="@+id/email_icon"
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:tint="@color/blue"
                        android:layout_centerHorizontal="true"
                        android:clickable="false"
                        android:src="@drawable/ic_mail" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/blue"
                            android:textSize="12sp"
                            android:fontFamily="@font/arimo"
                            android:layout_centerHorizontal="true"
                            android:clickable="false"
                            android:layout_below="@id/email_icon"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/whatsapp_student_profile"
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        >
                        <ImageButton
                            android:id="@+id/whatsapp_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerHorizontal="true"
                            android:background="@android:color/white"
                            android:tint="@color/blue"
                            android:clickable="false"
                            android:src="@drawable/ic_whatsapp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/whatsapp_icon"
                            android:layout_marginTop="5dp"
                            android:clickable="false"
                            android:text="Whatsapp"
                            android:fontFamily="@font/arimo"
                            android:layout_centerHorizontal="true"
                            android:textSize="12sp"
                            android:textAlignment="center"
                            android:textColor="@color/blue" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/view_result_student_profile"
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        >
                        <ImageButton
                            android:id="@+id/v1"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerHorizontal="true"
                            android:background="@android:color/white"
                            android:tint="@color/blue"
                            android:clickable="false"
                            android:src="@drawable/ic_poll" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/v1"
                            android:layout_marginTop="5dp"
                            android:text="Result"
                            android:layout_centerHorizontal="true"
                            android:clickable="false"
                            android:fontFamily="@font/arimo"
                            android:textSize="12sp"
                            android:textAlignment="center"
                            android:textColor="@color/blue" />

                    </RelativeLayout>




                </LinearLayout>
            </androidx.cardview.widget.CardView>



    <LinearLayout
        android:id="@+id/guardiance_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardian's Information"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/gray"
        android:fontFamily="@font/roboto"
        />

        <ListView
            android:id="@+id/guidance_info"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="200dp">

        </ListView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="15dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    android:id="@+id/icon_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    app:contentPadding="5dp"
                    app:cardBackgroundColor="@color/blue">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="fitXY"
                    android:tint="@android:color/white"
                    android:src="@drawable/ic_person"
                    />
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/icon_person"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@color/blue"
                    android:fontFamily="@font/open_sans"
                    android:textSize="13sp"
                    />
                    <TextView
                        android:id="@+id/guardian_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dike kingsley"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/roboto"
                        android:textSize="16sp"
                        />
                </LinearLayout>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="15dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    android:id="@+id/icon_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    app:contentPadding="5dp"
                    app:cardBackgroundColor="@color/blue">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_call"
                    android:tint="@android:color/white"
                    />
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/icon_phone"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Telephone"
                        android:textColor="@color/blue"
                        android:fontFamily="@font/open_sans"
                        android:textSize="13sp"
                        />
                    <TextView
                        android:id="@+id/guardian_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="07030870355"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/roboto"
                        android:textSize="16sp"
                        />
                </LinearLayout>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="15dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    android:id="@+id/icon_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    app:contentPadding="5dp"
                    app:cardBackgroundColor="@color/blue">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_location_"
                    />
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/icon_address"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:textColor="@color/blue"
                        android:fontFamily="@font/open_sans"
                        android:textSize="13sp"
                        />
                    <TextView
                        android:id="@+id/guardian_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No 5 annang"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/roboto"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        />
                </LinearLayout>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>